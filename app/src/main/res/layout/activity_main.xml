<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/txt_screen_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_width"/>

    <TextView
        android:id="@+id/txt_screen_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/screen_height"/>

    <TextView
        android:id="@+id/txt_status_bar_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status_bar_height"/>

    <TextView
        android:id="@+id/txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/margin"/>
</LinearLayout>